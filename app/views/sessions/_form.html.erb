<%= form_for :session, url: session_path do |form| %>
  <div class="form-group">
    <%= form.text_field :email, type: 'email', placeholder: "Email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.password_field :password, placeholder: "Password", class: "form-control" %>
  </div>

  <div class="submit-field" style="text-align: center; margin-top: 30px;">
    <%= form.submit "Sign In", class: "btn btn-default btn-block" %>
  </div>

  <div class="other-links" style="text-align: center">
    <%= link_to t(".forgot_password"), new_password_path %>
  </div>
<% end %>
