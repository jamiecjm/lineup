<div id="clearance" class="sign-up">
<div class="col-lg-12">
<h1 class="page-header">Edit Profile</h1>
</div>

  <%= form_for @user do |form| %>
    <%= render partial: '/users/form', object: form %>

    <strong>Allocate Number of Leave:</strong><br><br>
	<%=form.fields_for :total_leafe do |f|%>

	<div class="form-group">
	  <%= f.label :annual%>
	  <%= f.number_field :annual, class: "form-control"%>
	</div>

	<div class="form-group">
	  <%= f.label :maternity%>
	  <%= f.number_field :maternity, class: "form-control"%>
	</div>

	<div class="form-group">
	  <%= f.label :emergency%>
	  <%= f.number_field :emergency, class: "form-control"%>
	</div>

	<div class="form-group">
	  <%= f.label :study%>
	  <%= f.number_field :study, class: "form-control"%>
	</div>

	<div class="form-group">
	  <%= f.label :sick%>
	  <%= f.number_field :sick, class: "form-control"%>
	</div>

	<%end%>

    <div class="submit-field">
      <%= form.submit "Submit", class: "btn btn-default"%>
    </div>


  <% end %>
</div>

