<div class="col-lg-12">
<h1 class="page-header">Dashboard</h1>
</div>


<div class= "row">
<div class="col-sm-6 col-md-2">
	<div class="action">Requests</div>
</div>
<div class="col-sm-6 col-md-2">
	<div class="action">History</div>
</div>
<div class="col-sm-6 col-md-2">
	<div class="action">Leaves this Month</div>
</div>
<div class="col-sm-6 col-md-2">
	<div class="action">Add Employee</div>
</div>
<div class="col-sm-6 col-md-2">
	<div class="action">View Employees</div>
</div>
<div class="col-sm-6 col-md-2">
	<div class="action">Calendar</div>
</div>

</div>

<div class= "row">
<div class="col-md-5">



<div class="col-sm-12 col-md-12" style="margin: 25px 0px 25px 0px;padding-top: 70px;">
	<%=render "leaves/hrCalendar"%>
</div>




</div>


<div class="col-md-7">
<div class= "col-sm-12 col-md-12">
	
	<div class="col-sm-12 col-md-12">
	<div class="col-lg-12">
	<h3 class="page-header"><%=link_to "Requests (showing 5 of all requests)", "/hr/pending_leaves"%></h3>
	</div>
	<%@leaves = Leafe.where.not(status: "Approved").where("start_date >= ?",Date.today).order("start_date").limit(5).includes(:user)%>
	<%=render "leaves/leaves_table", :object => @leaves%>
		
	</div>

	<div class="col-sm-12 col-md-12">
	<div class="col-lg-12">
	<h3 class="page-header"><%=link_to 'Upcoming (showing 5 of all upcoming leaves)', "/hr/upcoming_leaves"%></h3>
	</div>
	<%@leaves = Leafe.where(status: "Approved").where("start_date >= ?",Date.today).order("start_date").limit(5).includes(:user)%>
	<%=render "leaves/leaves_table", :object => @leaves%>
		
	</div>


</div>
</div>
</div>

<div class="col-md-6">
	<%=render "linechart"%>
</div>
