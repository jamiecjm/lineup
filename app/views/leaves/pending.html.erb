<table class="table table-striped">
<thead>
<tr>
<th>ID</th>
<th>Name</th>
<th>Manager</th>
<th>Type</th>
<th>Status</th>
<th>From</th>
<th>To</th>
<th></th>
<th></th>
<th></th>
</tr>
</thead>

<tbody>
<%@leaves.each do |l|%>
<tr>
<td><%=l.id%></td>
<td><%=l.user.name%></td>
<td><%=l.user.manager.name if l.user.manager != nil%></td>
<td><%=l.leave_type%></td>
<td><%=l.status%></td>
<td><%=l.start_date%></td>
<td><%=l.end_date%></td>
<td>
	<%=link_to "/leafe/approve/#{l.id}", "data-toggle"=> "tooltip", title: "Approve", remote: true do%>
		<i class="glyphicon glyphicon-ok"></i>
	<%end%>
</td>
<td>
	<%=link_to "#", "data-toggle"=> "tooltip", title: "Reject", remote: true do%>
		<i class="glyphicon glyphicon-remove" data-toggle="modal" data-target="#rejectModal" id="/leafe/reject/<%=l.id%>"></i>
	<%end%>
</td>
<td>
	<%=link_to "/leafe/details/#{l.id}", "data-toggle"=> "tooltip", title: "Details", remote: true do%>
		<i class="glyphicon glyphicon-exclamation-sign"></i>
	<%end%>
</td>
</tr>
<%end%>
</tbody>
</table>

<%=render "rejectModal"%>

<%=render "detailsModal"%>
