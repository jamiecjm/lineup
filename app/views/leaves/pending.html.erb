<div class="col-lg-12">
<h1 class="page-header">Pending Requests</h1>
</div>
<div class= "row">
<div id="hrCalendar" class="col-sm-12 col-md-6"></div>

<div class= "col-sm-12 col-md-6">
	

		<%=render "pending_table"%>
		


</div>

</div>

<%=render "rejectModal"%>

<%=render "detailsModal"%>

<%=javascript_tag do%>
	$('#hrCalendar').fullCalendar({
		events: [
			<%Leafe.where(status:"Approved").each do |leave|%>
				{
					title: '<%=leave.user.name+" "+leave.leave_type+" Leave"%>',
					start: "<%=leave.start_date%>",
					end:	"<%=leave.end_date%>"
				},
			<%end%>
		]
	})
<%end%>