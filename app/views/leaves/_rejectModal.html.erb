<!-- Trigger the modal with a button -->

<!-- Modal -->
<div id="rejectModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header" style="background-color: black;color:#ADD8E6">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Reason for Rejection</h4>
      </div>
      <%=form_tag "#",authenticity_token: true do%>
      <div class="modal-body">
      <div class="form-group">
        <%=text_area_tag :rejection_reason,nil,rows: "10", class: "form-control"%>
        <%=hidden_field_tag :status,"Rejected"%>
      </div>
        <%=submit_tag "Submit",class: "btn btn-default"%>
      </div>
      <%end%>
      <div class="modal-footer" style="background-color: black">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>